{
    "AWSEBDockerrunVersion": 3,
    "containerDefinitions": [
        {
            "name": "app",
            "image": "anemfadilath/gestion_envoi:gestion",
            "essential": true,
            "memory": 256,
            "portMappings": [
                {
                    "containerPort": 80,
                    "hostPort": 80
                }
            ]
        },
        {
            "name": "nginx",
            "image": "anemfadilath/gestion_envoi:alpinelatest",
            "essential": true,
            "memory": 128,
            "portMappings": [
                {
                    "containerPort": 80,
                    "hostPort": 80
                }
            ]
        },
        {
            "name": "db",
            "image": "anemfadilath/gestion_envoi:mysql5.7",
            "essential": true,
            "memory": 512,
            "portMappings": [
                {
                    "containerPort": 3306,
                    "hostPort": 3306
                }
            ],
            "environment": [
                {
                    "name": "MYSQL_DATABASE",
                    "value": "mydb"
                },
                {
                    "name": "MYSQL_ROOT_PASSWORD",
                    "value": "fadila"
                },
                {
                    "name": "MYSQL_PASSWORD",
                    "value": "fadila"
                },
                {
                    "name": "MYSQL_USER",
                    "value": "fadila"
                },
                {
                    "name": "SERVICE_TAGS",
                    "value": "dev"
                },
                {
                    "name": "SERVICE_NAME",
                    "value": "mysql"
                }
            ]
        }
    ]
 }
 